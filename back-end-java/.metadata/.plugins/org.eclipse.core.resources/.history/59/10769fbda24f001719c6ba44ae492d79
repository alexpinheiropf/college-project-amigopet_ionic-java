	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>Serviços</title>
</h:head>
<h:body>
	<p:growl id="mensagem" />
	<h:form id="formListagem">
		<p:panel header="Serviços - Listagem">
			<p:dataTable id="tabela" emptyMessage="Nenhum registro encontrado."
				paginator="true" value="#{servicoBean.servicos}" var="cursorServico"
				rows="5">
				<f:facet name="header">
					<p:commandButton value="Novo" actionListener="#{servicoBean.novo}"
						oncomplete="PF('dialogo').show();"
						update=":mensagem :formCadastro:painel">
						<f:actionListener
							type="org.omnifaces.eventlistener.ResetInputAjaxActionListener" />
					</p:commandButton>
				</f:facet>
				<p:column headerText="Nome">
					<h:outputText value="#{cursorServico.nome}" />
				</p:column>

				<p:column headerText="Descrição">
					<h:outputText value="#{cursorServico.descricao}" />
				</p:column>

				<p:column headerText="Espécie Pet">
					<h:outputText value="#{cursorServico.especie}" />
				</p:column>

				<p:column headerText="PetShop">
					<h:outputText value="#{cursorServico.petshop.razaoSocial}" />
				</p:column>

				<p:column headerText="Opções">

					<p:commandButton icon="ui-icon-trash"
						actionListener="#{servicoBean.excluir}"
						update=":mensagem :formListagem:tabela">
						<p:confirm header="Confirmação"
							message="Deseja excluir o serviço?" icon="ui-icon-alert" />
						<f:attribute name="servicoSelecionado" value="#{cursorServico}" />
					</p:commandButton>

					<p:commandButton icon="ui-icon-pencil"
						actionListener="#{servicoBean.editar}"
						update=":mensagem :formCadastro:painel"
						oncomplete="PF('dialogo').show();">
						<f:attribute name="servicoSelecionado" value="#{cursorServico}" />
						<f:actionListener
							type="org.omnifaces.eventlistener.ResetInputAjaxActionListener" />
					</p:commandButton>

				</p:column>
			</p:dataTable>
			<p:confirmDialog global="true">
				<p:commandButton value="Sim" type="button"
					styleClass="ui-confirmdialog-yes" icon="ui-icon-check" />
				<p:commandButton value="Não" type="button"
					styleClass="ui-confirmdialog-no" icon="ui-icon-close" />
			</p:confirmDialog>

		</p:panel>
	</h:form>

	<p:dialog header="Serviços - Cadastro" widgetVar="dialogo"
		draggable="false" resizable="false" modal="true" closable="false">
		<h:form id="formCadastro">
			<h:panelGrid id="painel" columns="2">
				<p:outputLabel value="Nome" />
				<p:inputText maxlength="50" size="30"
					value="#{servicoBean.servico.nome}" required="true" 
					requiredMessage="O Campo Nome é Obrigatório"/>

				<p:outputLabel value="Descrição:" />
				<p:inputText maxlength="50" size="30"
					value="#{servicoBean.servico.descricao}" required="true" 
					requiredMessage="O Campo Descrição é Obrigatório"/>

				<p:outputLabel value="Espécie:" />
				<p:inputText maxlength="30" size="10"
					value="#{servicoBean.servico.especie}" required="true" 
					requiredMessage="O Campo Espécie é Obrigatório" />

				<p:outputLabel value="Petshop:" />
				<p:selectOneMenu filter="true"
					value="#{servicoBean.servico.petshop}"
					converter="omnifaces.SelectItemsConverter" required="true"
					requiredMessage="O campo 'PetShop' é obrigatório">
					<f:selectItem noSelectionOption="true"
						itemLabel="Selecione um PetShop" />
					<f:selectItems value="#{servicoBean.petshops}" var="petshop"
						itemValue="#{petshop}" itemLabel="#{petshop.razaoSocial}" />
				</p:selectOneMenu>

			</h:panelGrid>

			<h:panelGrid columns="2">
				<p:commandButton value="Salvar"
					actionListener="#{servicoBean.salvar}"
					update=":mensagem :formCadastro:painel :formListagem:tabela" />
				<p:commandButton value="Fechar" oncomplete="PF('dialogo').hide();" />
			</h:panelGrid>
		</h:form>
	</p:dialog>
</h:body>
