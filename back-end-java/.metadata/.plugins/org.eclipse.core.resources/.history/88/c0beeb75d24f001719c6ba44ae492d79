	<p:growl id="mensagem" />
	<h:form id="formListagem">
		<p:panel header="PetShop - Listagem">
			<p:dataTable id="tabela" emptyMessage="Nenhum registro encontrado."
				paginator="true" value="#{petshopBean.petshops}" var="cursorPetshop"
				rows="5">
				<f:facet name="header">
					<p:commandButton value="Novo" actionListener="#{petshopBean.novo}"
						update=":formCadastro:painel" oncomplete="PF('dialogo').show();">
						<f:actionListener
							type="org.omnifaces.eventlistener.ResetInputAjaxActionListener" />
					</p:commandButton>
				</f:facet>

				<p:column headerText="Razão Social"
					filterBy="#{cursorPetshop.razaoSocial}"
					sortBy="#{cursorPetshop.razaoSocial}">
					<h:outputText value="#{cursorPetshop.razaoSocial}" />
				</p:column>

				<p:column headerText="CNPJ">
					<h:outputText value="#{cursorPetshop.cnpj}" />
				</p:column>

				<p:column headerText="Inscrição Estadual">
					<h:outputText value="#{cursorPetshop.inscEstadual}" />
				</p:column>

				<p:column headerText="Endereço">
					<h:outputText value="#{cursorPetshop.pessoa.rua}" />
					<h:outputText value=" - " />
					<h:outputText value="#{cursorPetshop.pessoa.numero}" />
					<h:outputText value=" - " />
					<h:outputText value="#{cursorPetshop.pessoa.bairro}" />
				</p:column>

				<p:column headerText="Cidade"
					filterBy="#{cursorPetshop.pessoa.cidade.nome}"
					sortBy="#{cursorPetshop.pessoa.cidade.nome}">
					<h:outputText value="#{cursorPetshop.pessoa.cidade.nome}" />
					<h:outputText value=" - " />
					<h:outputText value="#{cursorPetshop.pessoa.cidade.estado.sigla}" />
				</p:column>

				<p:column headerText="Opções">

					<p:commandButton icon="ui-icon-trash"
						actionListener="#{petshopBean.excluir}"
						update=":mensagem :formListagem:tabela">

						<p:confirm header="Confirmação"
							message="Deseja excluir o Petshop?" icon="ui-icon-alert" />
						<f:attribute name="petshopSelecionado" value="#{cursorPetshop}" />
					</p:commandButton>

					<p:commandButton icon="ui-icon-pencil"
						actionListener="#{petshopBean.editar}"
						update=":mensagem :formCadastro:painel"
						oncomplete="PF('dialogo').show();">
						<f:attribute name="petshopSelecionado" value="#{cursorPetshop}" />
						<f:actionListener
							type="org.omnifaces.eventlistener.ResetInputAjaxActionListener" />
					</p:commandButton>

				</p:column>

			</p:dataTable>

			<p:confirmDialog global="true">
				<p:commandButton value="Sim" type="button"
					styleClass="ui-confirmdialog-yes" icon="ui-icon-check" />
				<p:commandButton value="Não" type="button"
					styleClass="ui-confirmdialog-no" icon="ui-icon-close" />
			</p:confirmDialog>

		</p:panel>
	</h:form>

	<p:dialog header="PetShop - Cadastro" widgetVar="dialogo"
		draggable="false" resizable="false" modal="true" closable="false">
		<h:form id="formCadastro">
			<h:panelGrid id="painel" columns="2">
				<p:outputLabel for="razao" value="Razão Social: " />
				<p:inputText id="razao" maxlength="50" size="30" required="true"
					requiredMessage="O Campo Razão Social é Obrigatório"
					value="#{petshopBean.petshop.razaoSocial}" />

				<p:outputLabel for="pessoa" value="Pessoa: " />
				<p:selectOneMenu id="pessoa" filter="true"
					value="#{petshopBean.petshop.pessoa}"
					converter="omnifaces.SelectItemsConverter"
					required="true" 
					requiredMessage="O Campo Estado é Obrigatório">
					<f:selectItem itemValue="" itemLabel="Selecione um Cadastro" />
					<f:selectItems value="#{petshopBean.pessoas}" var="cursorPessoa"
						itemValue="#{cursorPessoa}" itemLabel="#{cursorPessoa.nome}" />
				</p:selectOneMenu>

				<p:outputLabel for="cnpj" value="CPNJ: " />
				<p:inputMask id="cnpj" mask="99.999.999/9999-99" required="true"
					requiredMessage="O Campo CNPJ é Obrigatório" size="20"
					value="#{petshopBean.petshop.cnpj}" />

				<p:outputLabel for="inscricao" value="Inscrição Estadual: " />
				<p:inputText id="inscricao" maxlength="10" required="true"
					requiredMessage="O Campo Inscrição Estadual é Obrigatório" size="20"
					value="#{petshopBean.petshop.inscEstadual}" />

			</h:panelGrid>

			<h:panelGrid columns="2">
				<p:commandButton value="Salvar"
					actionListener="#{petshopBean.salvar}"
					update=":mensagem :formCadastro:painel :formListagem:tabela" />
				<p:commandButton value="Fechar" oncomplete="PF('dialogo').hide();" />
			</h:panelGrid>
		</h:form>
	</p:dialog>
